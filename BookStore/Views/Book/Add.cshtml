@model BookStore.Models.Domain.Book

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Book</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="Title">Book Title</label>
                    <input type="text" class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GenreID">Genre</label>
                    <select class="form-control" asp-for="GenreID" asp-items="Model.GenreList">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="GenreID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ISBN">ISBN</label>
                    <input type="text" class="form-control" asp-for="ISBN" />
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pages">Pages</label>
                    <input type="number" class="form-control" asp-for="Pages" />
                    <span asp-validation-for="Pages" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorID">Author</label>
                    <select class="form-control" asp-for="AuthorID" asp-items="Model.AuthorList">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="AuthorID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PublisherID">Publisher</label>
                    <select class="form-control" asp-for="PublisherID" asp-items="Model.PublisherList">
                        <option value="">--select--</option>
                    </select>
                    <span asp-validation-for="PublisherID" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }

                <div class="form-group pt-3">
                    <button class="btn btn-dark" type="submit"><i class="bi bi-save"></i> Save</button>
                    <a href="/Book/GetAll" class="btn btn-primary"><i class="bi bi-list"></i> Show all</a>
                </div>
            </form>
        </div>
    </div>
</div>