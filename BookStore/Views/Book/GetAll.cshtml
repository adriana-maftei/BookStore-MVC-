@model IEnumerable<BookStore.Models.Domain.Book>

<div class="container pt-15">
    <div class="row">
        <div class="col-md-12">
            <h3>Manage Books</h3>

            <table class="table table-striped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>ISBN</th>
                        <th>Pages</th>
                        <th>Author</th>
                        <th>Publisher</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.GenreName</td>
                            <td>@item.ISBN</td>
                            <td>@item.Pages</td>
                            <td>@item.AuthorName</td>
                            <td>@item.PublisherName</td>
                            <td>
                                <a class="btn btn-success" href="/Book/Update?id=@item.ID"><i class="bg-info bi-pen"></i> Edit</a>
                                <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Book/Delete?id=@item.ID"><i class="bg-info bi-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" style="background-color:dodgerblue" href="/Book/Add">+Add more</a>
        </div>
    </div>
</div>