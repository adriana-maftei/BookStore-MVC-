@model BookStore.Models.Domain.Genre

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3>Update Genre</h3>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="ID"/>
                <div class="form-group">
                    <label asp-for="Name">Genre Name</label>
                    <input type="text" class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }

                <div class="form-group pt-3">
                    <button class="btn btn-dark" type="submit"><i class="bi bi-save"></i> Save</button>
                    <a href="/Genre/GetAll" class="btn btn-primary"><i class="bi bi-list"></i> Show all</a>
                </div>
            </form>
        </div>
    </div>
</div>